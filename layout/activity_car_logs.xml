<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.muneeb.mobomechanics.CarLogsActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".8"
    android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorBlack"
            android:text="Car Maintenance Form"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorBlack"
            android:text="Car Make :"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/make"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:inputType="textCapSentences"
            android:hint="Toyota"

            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:paddingLeft="10dp"
            android:textColor="@color/colorBlack"
            android:paddingTop="10dp"
            android:text="Car Model :"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/model"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:hint="1994"
            android:maxLength="4"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:textColor="@color/colorBlack"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Car Mileage :"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/mileage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:inputType="number"
            android:hint="123456"
            android:maxLength="6"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:textColor="@color/colorBlack"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Daily Average Mileage :"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/avgmile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:hint="123456"
            android:maxLength="6"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:text="Form will take current date on clicking SUBMIT button"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/square_shape"
        android:textSize="15sp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="5dp"/>
</LinearLayout>